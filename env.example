# Configuración de entorno
NODE_ENV=production

# URLs de la aplicación
APP_URL=https://tu-dominio.com
API_URL=https://api.santiastravel.com

# Configuración de base de datos (para el futuro panel de administración)
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Configuración de autenticación (para el futuro panel de administración)
JWT_SECRET=tu-jwt-secret-super-seguro
