# Configuración de email (para el futuro panel de administración)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion

# Configuración de pagos (para el futuro panel de administración)
STRIPE_PUBLIC_KEY=pk_test_...
